# Server Configuration
PORT=3001
NODE_ENV=production
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# AI Configuration
AI_NAME=EPIYA-AI
AI_PERSONALITY=friendly_professional
DEFAULT_MODEL=MiniMax-M2
DEFAULT_TEMPERATURE=0.7
MAX_TOKENS=4096

# AI Base URL (from agent.js)
AI_BASE_URL=http://161.97.152.192:8002
AI_API_ENDPOINT=/v1/chat/completions

# AI System Prompt
AI_SYSTEM_PROMPT="You are a helpful, friendly, and knowledgeable AI assistant. You provide accurate information and always verify facts before answering sensitive questions about news, politics, or current events. You are truthful and acknowledge when you don't know something."

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CHAT_RATE_LIMIT_WINDOW_MS=60000
CHAT_RATE_LIMIT_MAX_REQUESTS=20

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_DIR=./logs

# Conversation Storage
CONVERSATION_RETENTION_DAYS=30
MAX_CONVERSATION_HISTORY=50

# Web Search (Optional - for fact-checking)
ENABLE_FACT_CHECK=true
FACT_CHECK_API_KEY=your_search_api_key_here
FACT_CHECK_API_URL=https://api.search.com/v1/search